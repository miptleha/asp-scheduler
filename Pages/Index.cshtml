@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<form method="post">
    <div class="row">
        <div class="col-md-6">
            <div>Want to do</div>
            <div><textarea name="want" rows="20" style="width:100%">@Model.Want</textarea></div>
        </div>
        <div class="col-md-6">
            <div>What is done</div>
            <div><textarea name="done" rows="20" style="width:100%">@Model.Done</textarea></div>
        </div>
    </div>
    <input type="hidden" name="day" value="@Model.Day" />

    <div class="mt-2">
        <button class="btn btn-primary" asp-page-handler="Save">Save</button>
        <a class="btn btn-secondary" asp-page="/Index" asp-route-day="@ViewData["CurDay"]">Cancel</a>
    </div>
</form>
